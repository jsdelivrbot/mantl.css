{
  "name": "mantl.css",
  "version": "0.1.0",
  "description": "Light CSS scaffold for Real World Vue",
  "main": "mantl.styl",
  "author": "Dustin Delatore",
  "license": "MIT",
  "private": true,
  "devDependencies": {
    "autoprefixer": "^8.5.0",
    "clean-css-cli": "^4.1.11",
    "normalize.css": "^8.0.0",
    "postcss-cli": "^5.0.0",
    "stylus": "^0.54.5",
    "vuepress": "^0.9.0"
  },
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "postinstall": "cp node_modules/normalize.css/normalize.css ./styles/normalize.styl",
    "docs:dev": "vuepress dev docs",
    "docs:build": "vuepress build docs",
    "build": "yarn build-stylus && yarn build-autoprefix && yarn build-cleancss",
    "build-stylus": "stylus -m mantl.styl -o mantl.css",
    "build-autoprefix": "postcss mantl.css -u autoprefixer --no-map -o mantl.max.css",
    "build-cleancss": "cleancss -o mantl.min.css mantl.css",
    "start": "yarn build-stylus -w"
  },
  "files": [
    "mantl.css",
    "LICENSE",
    "README.md"
  ]
}
