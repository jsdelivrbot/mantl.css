button
label
input
optgroup
select
textarea
  display inline-flex
  font-family "Open sans", sans-serif
  font-size 100%
  line-height 1.15
  margin 0

button
input
  overflow visible

button
select
  text-transform none

button
[type="button"]
[type="reset"]
[type="submit"]
  -webkit-appearance none


button::-moz-focus-inner
[type="button"]::-moz-focus-inner
[type="reset"]::-moz-focus-inner
[type="submit"]::-moz-focus-inner
  border-style none
  padding 0

button:-moz-focusring
[type="button"]:-moz-focusring
[type="reset"]:-moz-focusring
[type="submit"]:-moz-focusring
  outline 2px solid $primary-color

label
  color $gray-dark
  font-weight 700

input
textarea
  box-sizing border-box
  border solid 1px $gray

textarea
  width 100%
  overflow auto
  font-size 20px

[type="checkbox"]
[type="radio"]
  box-sizing border-box
  padding 0

[type="number"]::-webkit-inner-spin-button
[type="number"]::-webkit-outer-spin-button
  height auto

[type="search"]
  -webkit-appearance textfield
  outline-offset -2px

[type="search"]::-webkit-search-decoration
  -webkit-appearance none

[type="text"]
[type="number"]
[type="search"]
  height $input-height
  width 100%
  padding 0 10px
  font-size 20px

  &:focus
    border-color $primary-color

::-webkit-file-upload-button
  -webkit-appearance button
  font inherit

[hidden]
  display none

select
  width 100%
  height $input-height
  padding 0 24px 0 10px
  vertical-align middle
  background $white $indicator no-repeat right 12px center
  background-size 8px 10px
  border solid 1px $gray
  border-radius 0
  appearance none

  &:focus
    border-color $primary-color
    outline 0

    &::ms-value
      color $black
      background $white

  &::ms-expand
    opacity 0


.input-inline
  position relative

  input
    position relative
    padding-right 70px

  &.-button-right button
    position absolute
    top 0
    right 0
    cursor pointer

    &:hover
      transform inherit
      box-shadow none
