.nav
  display flex
  justify-content space-between
  align-items center
  height 60px

  > .brand
    font-family 'Montserrat', sans-serif
    font-weight 700
    font-size 1.5em
    text-decoration none

  .nav-item
    box-sizing border-box
    margin 0 5px
    color $gray-dark
    text-decoration none

    &.router-link-exact-active
      color $primary-color
      border-bottom solid 2px $primary-color
